pipeline {
    agent any

    environment {
        VIRTUAL_ENV = 'venv'
        PYTHON_EXE =  "C:\Users\karee\AppData\Local\Programs\Python\Python312\python.exe"
        
    }

    stages {

        stage('Setup') {
            steps {
                script {
                    // Create virtual env once
                    if (!fileExists("${env.WORKSPACE}/${VIRTUAL_ENV}")) {
                        bat """
                        "%PYTHON_EXE%" -m venv %VIRTUAL_ENV%
                        """
                    }

                    // Install all deps from requirements.txt
                    bat """
                    call %VIRTUAL_ENV%\\Scripts\\activate.bat
                    "%PYTHON_EXE%" -m pip install -r requirements.txt
                    """
                }
            }
        }

        stage('Lint') {
            steps {
                script {
                    bat """
                    call %VIRTUAL_ENV%\\Scripts\\activate.bat
                    flake8 app.py
                    """
                }
            }
        }

        stage('Test') {
            steps {
                script {
                    bat """
                    call %VIRTUAL_ENV%\\Scripts\\activate.bat
                    pytest
                    """
                }
            }
        }

        // --- NEW: Coverage stage ---
        stage('Coverage') {
            steps {
                script {
                    bat """
                    call %VIRTUAL_ENV%\\Scripts\\activate.bat
                    coverage run -m pytest
                    coverage report -m
                    """
                }
            }
        }

        // --- NEW: Security Scan stage ---
        stage('Security Scan') {
            steps {
                script {
                    bat """
                    call %VIRTUAL_ENV%\\Scripts\\activate.bat
                    bandit -r .
                    """
                }
            }
        }

        // --- UPDATED: simple local Deploy stage ---
        stage('Deploy') {
            steps {
                script {
                    bat """
                    if not exist deploy mkdir deploy
                    copy app.py deploy\\app.py /Y
                    copy requirements.txt deploy\\requirements.txt /Y
                    echo Application deployed to %cd%\\deploy
                    """
                }
            }
        }
    }

    post {
        always {
            cleanWs()
        }
    }
}
